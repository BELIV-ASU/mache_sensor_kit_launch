<launch>
  <arg name="launch_driver" default="true"/>
  <arg name="playback" default="false"/>
  <arg name="gnss_receiver" default="oxts" description="oxts(default)"/>
  <arg name="coordinate_system" default="1" description="0:UTM, 1:MGRS, 2:PLANE"/>

  <group>
    <push-ros-namespace namespace="gnss"/>

    <!-- OxTS GPS -->
    <include file="$(find-pkg-share asu)/launch/oxts_driver.launch.py">
        <arg name="playback" value="$(var playback)" />
        <arg name="unit_ip" value="192.168.0.3" />
        <arg name="topic_prefix" value="oxts" />
        <arg name="param_file" value="$(find-pkg-share asu)/config/oxts_params.yaml" />
    </include>

    
    
    <!-- DataSpeed provided localization -->
    <include file="$(find-pkg-share ds_localization)/launch/gnss_localization.launch.py">
        <arg name="use_sim_time" value="$(var playback)" />
        <arg name="oxts_fix_topic" value="oxts/fix" />
        <arg name="oxts_vel_topic" value="oxts/velocity" />
        <arg name="oxts_imu_topic" value="oxts/imu" />
        <arg name="oxts" value="True" />
        <arg name="oxts_roll" value="180.0" />
        <arg name="oxts_pitch" value="0.0" />
        <arg name="oxts_yaw" value="90.0" />
    </include>
    
    
    <!-- Oxts datatype conversion for autoware -->
    <include file="$(find-pkg-share oxts_datatype_conversion)/launch/oxts_datatype_conversion.launch.xml">
        <arg name="input_topic_vel" value="oxts/velocity"/>
        <arg name="input_topic_odom" value="oxts_utm_odom"/>
      
        <arg name="output_topic_vel" value="oxts/autoware_velocity"/>
        <arg name="output_topic_pose" value="oxts/pose_with_covariance"/>
        <arg name="output_topic_twist" value="/sensing/twist_estimator/twist_with_covariance"/>
        <arg name="output_topic_orientation" value="oxts/orientation"/>
    </include>
    
    
 </group>
 <group>
    <!--push-ros-namespace namespace="imu"/-->

    <include file="$(find-pkg-share imu_corrector)/launch/imu_corrector.launch.xml">
      <arg name="input_topic" value="gnss/oxts/imu"/>
      <arg name="output_topic" value="imu/imu_data"/>
      <arg name="param_file" value="$(find-pkg-share individual_params)/config/$(env VEHICLE_ID default)/mache_sensor_kit/imu_corrector.param.yaml"/>
    </include>
 </group>
 <group>
 <!-- NavSatFix to MGRS Pose -->
    <include file="$(find-pkg-share gnss_poser)/launch/gnss_poser.launch.xml">
      <arg name="input_topic_fix" value="gnss/oxts/fix"/>
      
      <arg name="input_topic_orientation" value="/autoware_orientation"/>

      <arg name="output_topic_gnss_pose" value="gnss/pose"/>
      <arg name="output_topic_gnss_pose_cov" value="gnss/pose_with_covariance"/>
      <arg name="output_topic_gnss_fixed" value="gnss/fixed"/>

      <arg name="coordinate_system" value="$(var coordinate_system)"/>
      <arg name="use_gnss_ins_orientation" value="true"/>

      <arg name="gnss_frame" value="gnss_link"/>
      <arg name="gnss_base_frame" value="gnss_base_link"/>
    </include>
 </group>
</launch>
